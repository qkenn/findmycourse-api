generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Subject {
  id      Int      @id @default(autoincrement())
  name    String
  courses Course[]
}

model Stream {
  id              Int      @id @default(autoincrement())
  name            String
  includedStreams String[]
  courses         Course[]
}

model University {
  id         Int                   @id @default(autoincrement())
  name       String
  programmes UniversityProgramme[]
}

model Course {
  id                   Int                   @id @default(autoincrement())
  courseCode           String?               @unique
  intake               Int?
  name                 String
  constraints          Json?
  subject              Subject               @relation(fields: [subjectId], references: [id])
  subjectId            Int
  universityProgrammes UniversityProgramme[]
  stream               Stream                @relation(fields: [streamId], references: [id])
  streamId             Int
}

model UniversityProgramme {
  id           Int        @id @default(autoincrement())
  name         String
  abbr         String?
  university   University @relation(fields: [universityId], references: [id])
  universityId Int
  course       Course     @relation(fields: [courseId], references: [id])
  courseId     Int
  keywords     String[]
  duration     String?    @default("4 Years")
  medium       String?    @default("English")
  uniCode      String?    @unique

  @@unique([universityId, courseId], name: "unique_university_course")
}
